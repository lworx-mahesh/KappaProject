@{
    Layout = null;
}
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link href="css/stylesheet.css" rel="stylesheet" />
    <link href="css/bootstrap.min.css" rel="stylesheet" />
    <link href="fonts/stylesfonts.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <title>Kappa || SignIn</title>

    <style type="text/css">
        .login-section {
            padding: 4em 0;
            display: block;
        }

        .login-form {
            position: relative;
            font-size: 14px;
            color: #2d333a;
            background: #fff;
            box-shadow: 0 12px 40px rgba(0,0,0,.12);
            border-radius: 5px;
            display: flex;
            flex-grow: 1;
            flex-direction: column;
            overflow: hidden;
            padding: 40px 40px;
        }

        .login-wapper {
            display: flex;
            flex-direction: column;
            justify-content: start;
            min-height: auto;
        }

            .login-wapper h4 {
                font-size: 24px;
                font-weight: 400;
                margin: 0 0 21px;
            }

            .login-wapper p {
                font-size: 0.92em;
                font-weight: 500;
            }

        .forgotpass {
            font-size: 0.92rem;
            font-weight: bold;
            color: #635dff;
        }

        .form-group {
            margin-bottom: 1em;
        }

        .form-control {
            -webkit-appearance: none;
            font-family: inherit;
            font-size: 16px !important;
            height: 52px;
            line-height: 1.1;
            outline: none;
            padding: 0 16px !important;
            width: 100%;
            color: #2d333a;
            background: #fff;
            transition: box-shadow .2s ease-in-out,border-color .2s ease-in-out;
            border-radius: 3px !important;
            -webkit-border-radius: 3px !important;
            -moz-border-radius: 3px !important;
            border: 1px solid #c2c8d0 !important;
        }

        .login-wapper .form-group {
            position: relative;
        }

        .syntaxinput {
            color: #2d333a;
            font-size: 15px;
            font-weight: 600;
            position: absolute;
            background: #fff;
            transform: translateY(-50%);
            transition: transform .10s ease-in-out,top .10s ease-in-out,padding .10s ease-in-out;
            transform-origin: 0;
            max-width: 90%;
            text-overflow: ellipsis;
            white-space: nowrap;
            overflow: hidden;
            top: 27px;
            left: 27px;
        }

        .form-group.active .syntaxinput {
            top: 2px;
            font-size: 1.1em;
            color: #635dff;
            transform: scale(.88) translateX(0) translateY(-70%);
            overflow: visible;
            white-space: normal;
        }

        .login-wapper input:-internal-autofill-selected {
            background-color: transparent;
        }

        #EmilInput.active .form-control {
            border-color: #007bad !important;
        }

        #PasswordInput.active .form-control {
            border-color: #007bad !important;
        }
    </style>
</head>
<body>
    <section class="login-section">
        <div class="container">
            <div class="row">
                <div class="col-12 col-sm-10 col-md-6 col-xl-5 mx-auto">
                    <div class="login-form">
                        <form class="col-12 login-wapper" action="/Registration/Product">
                            <div class="row text-center">
                                <h4>Welcome</h4>
                                <p>Log in to KappaEco.com to continue to KappaEcommerce.</p>
                            </div>
                            <div class="row">
                                <div id="EmilInput" class="form-group emaillabel">
                                    <input type="text" class="form-control" id="Email" name="">
                                    <span class="syntaxinput ">Email address</span>
                                </div>
                                <div id="PasswordInput" class="form-group pwdlabel">
                                    <input type="password" class="form-control" id="Password" name="">
                                    <span class="syntaxinput">Password</span>
                                    <!-- <button type="button" class="btn btn-default">
                                            <i class="far fa-eye passwordhide"></i>
                                            <i class="fas fa-eye-slash passwordshow"></i>
                                    </button> -->
                                </div>
                                <div class="form-group">
                                    <a class="forgotpass" href="ForgotPassword">Forgot password?</a>
                                </div>
                                <div class="form-group">
                                    <button class="btn w-100 btn-primary" type="submit">Login</button>
                                </div>
                                <div class="form-group">
                                    <p><span>Don't have an account?</span><a style="margin-left:8px;font-size:14px;" href="#">Sign Up</a></p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <!-- footer html start end -->
    <!-- Optional JavaScript -->
    <script src="js/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>


    <script type="text/javascript">
        $(document).ready(function () {
            $("#EmilInput").click(function () {

                // alert("Button Email clicked!");
                $(".emaillabel").addClass("active");
                $("#Email").css("border-color", "#635dff !important");
            });

            $("#PasswordInput").click(function () {

                // alert("Button Password clicked!");
                $(".pwdlabel").addClass("active");
                $("#Password").css("border-color", "#635dff");
            });
        });

    </script>
</body>